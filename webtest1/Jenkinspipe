pipeline
{
    agent any
    stages
    {
        stage("Git checkout")
        {
            steps{
                    git credentials Id:'greeshmagit', url:"https://github.com/greeshmagit/webtest1.git"
                 }
        }
        stage("Maven build")
        {
           steps
           {
              sh "mvn clean package"
           }
        }
        stage("deploy to tomcat")
        {
          steps
          {
              ssh agent(['tomcat-new'])
              {
                sh """
                      scp -o strictHostkey checking=no target/webtest.war ec2-user@172.31.40.38:/opt/tomcat/webapps
